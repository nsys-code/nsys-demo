<?xml version="1.0" encoding="UTF-8"?>

<nsys-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugin-version="1">

    <!-- Plugin Info -->
    
	<plugin-info>
		<description>${project.description}</description>
		<version>${build.number}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
	</plugin-info>

	<!-- Plugin Modules -->

	<management-agent key="nsys-portal-demo" name="Nsys Portal Demo" class="org.nsys.portal.webapp.demo.plugin.DemoPlugin">
		<dependency>org.nsys.daemon:scheduler</dependency>
	</management-agent>
	
	<component key="nsys-portal-demo_plugin-component" name="Demo Plugin Component" class="org.nsys.portal.webapp.demo.plugin.DemoPluginComponentImpl" system="false">
		<interface>org.nsys.portal.webapp.demo.plugin.DemoPluginComponent</interface>
	</component>

	<navigation-section key="nsys-portal-demo_admin-demo" name="Add-ons Administration Navigation" location="system.admin/demo" weight="20">
		<label>Demo</label>
	</navigation-section>
    
	<navigation-item key="nsys-portal-demo_nsys-org-tweets" name="Nsys Platform tweets" section="system.admin/demo" weight="0">
		<label>Nsys Platform tweets</label>
		<link>/demo/tweets/nsys_org</link>
	</navigation-item>

    <admin-gadget key="nsys-portal-demo_admin-gadget-demo" name="Add-ons Admin Gadget" class="org.nsys.portal.webapp.demo.gadget.DemoGadget">
    	<description>Provides an overview for the Demo gadget.</description>
    	<label>Demo</label>
    	<column>left</column>
    	<order>1</order>
    </admin-gadget>
    
    <!-- Navigation 'demo.header.actions' [BEGIN] -->
	
	<navigation-section key="nsys-demo_demo-header-actions" name="Demo Header Actions" location="demo.header.actions" weight="0">
		<label>Demo Header Actions</label>
	</navigation-section>
	
	<navigation-item key="nsys-demo_demo-header-actions_dashboard" name="System Dashboard" section="demo.header.actions" weight="0">
		<label>System Dashboard</label>
		<link>/dashboard</link>
	</navigation-item>
	
	<navigation-item key="nsys-demo_demo-header-actions_admin" name="Administration" section="demo.header.actions" weight="0">
		<label>Administration</label>
		<link>/admin</link>
	</navigation-item>
		
    <!-- Navigation 'demo.header.actions' [END] -->    

</nsys-plugin>